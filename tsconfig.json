{
  "compilerOptions": {
    "target": "es5",
    "module": "umd",
    "lib": ["es2015"],
    "declaration": true,
    "sourceMap": true,
    "rootDir": "src/",
    "outDir": "dist/",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"]
}

      "pre-commit": "lint-staged"
    }
  },
  "files": [
    "dist/stow.d.ts",
    "dist/stow.min.js",
    "dist/stow.min.js.map"
  ],
  "author": "Alvin Chan <no@email.com>",
  "license": "ISC",
  "devDependencies": {
    "ava": "^0.25.0",
    "concurrently": "^3.5.1",
    "husky": "^0.15.0-rc.13",
    "lint-staged": "^7.0.0",
    "nyc": "^11.6.0",
    "prettier": "^1.11.1",
    "typescript": "^2.8.1",
    "uglify-js": "^3.3.16"
  },
  "scripts": {
    "start": "concurrently --names TS,AVA --prefix-colors magenta,cyan \"tsc --watch\" \"ava --watch\"",
    "build": "tsc && uglifyjs dist/stow.js --compress --mangle --source-map \"content='dist/stow.js.map'\" --output dist/stow.min.js",
    "test": "tsc && nyc ava"

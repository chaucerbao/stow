{
  "name": "@chaucerbao/stow",
  "version": "0.1.0",
  "description": "",
  "main": "dist/stow.min.js",
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
